arxivId = {NIHMS150003},
author = {Miyata, Tatsuhiko and Hirata, Fumio},
doi = {10.1002/jcc.20844},
eprint = {NIHMS150003},
file = {:Users/siqin/Library/Application Support/Mendeley Desktop/Downloaded/Miyata, Hirata - 2008 - Combination of molecular dynamics method and 3D-RISM theory for conformational sampling of large flexible molecu.pdf:pdf},
isbn = {0192-8651},
issn = {01928651},
journal = {Journal of Computational Chemistry},
keywords = {3D-RISM theory,Acetylacetone,Molecular dynamics simulation,Multiple timestep algorithm,Solvent-induced mean force},
number = {6},
pages = {871--882},
pmid = {17963231},
title = {{Combination of molecular dynamics method and 3D-RISM theory for conformational sampling of large flexible molecules in solution}},
