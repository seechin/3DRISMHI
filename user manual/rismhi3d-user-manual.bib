keywords = {RISM,benzene,dispersion,hexafluorobenzene,integral equations,quadrupolar solvation},
number = {16-17},
pages = {2461--2476},
title = {{Structure and thermodynamics of nondipolar molecular liquids and solutions from integral equation theory}},
volume = {114},
year = {2016}
}
