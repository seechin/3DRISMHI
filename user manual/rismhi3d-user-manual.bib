doi = {10.1063/1.4848716},
file = {:Users/siqin/Library/Application Support/Mendeley Desktop/Downloaded/Omelyan, Kovalenko - 2013 - Multiple time step molecular dynamics in the optimized isokinetic ensemble steered with the molecular theory.pdf:pdf},
