issn = {19516401},
journal = {European Physical Journal: Special Topics},
month = {apr},
number = {5},
pages = {853--891},
title = {{Is it the shape of the cavity, or the shape of the water in the cavity?}},
url = {https://doi.org/10.1140/epjst/e2013-01818-y},
volume = {223},
year = {2014}
}
