issn = {0006291X},
journal = {Biochemical and Biophysical Research Communications},
keywords = {Cycloheximide,Cytoplasmic extract,IGF-I,IGFBP-5,Protein synthesis inhibitor,mRNA binding proteins},
number = {2},
pages = {422--427},
title = {{Regulation of insulin-like growth factor binding protein-5 mRNA abundance in rat intestinal smooth muscle}},
volume = {275},
year = {2000}
}
