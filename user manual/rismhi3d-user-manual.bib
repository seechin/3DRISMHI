file = {:Users/siqin/Library/Application Support/Mendeley Desktop/Downloaded/Kung, Gonz{\'{a}}lez-Mozuelos, De La Cruz - 2010 - Nanoparticles in aqueous media Crystallization and solvation charge asymmetry.pdf:pdf},
