issn = {08927022},
journal = {Molecular Simulation},
keywords = {3D-RISM-KH molecular theory of solvation,canonical and isokinetic ensembles thermostat algo,multiple time step (MTS) molecular dynamics (MD) s,multiscale OIN/SFCE/3D-RISM-KH algorithm,optimised isokinetic Nos{\'{e}}-Hoover (OIN) chain algor},
