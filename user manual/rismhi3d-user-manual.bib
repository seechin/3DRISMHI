doi = {10.1021/jp107383s},
file = {:Users/siqin/Library/Application Support/Mendeley Desktop/Downloaded/Howard, Lynch, Pettitt - 2011 - Ion and solvent density distributions around canonical B-DNA from integral equations.pdf:pdf},
isbn = {1520-5207},
issn = {15205207},
journal = {Journal of Physical Chemistry B},
number = {3},
pages = {547--556},
pmid = {21190358},
title = {{Ion and solvent density distributions around canonical B-DNA from integral equations}},
volume = {115},
year = {2011}
}
